#!/usr/bin/env sh

# Global settings
/Users/jacksonmiller/.nix-profile/bin/yabai -m config layout bsp
/Users/jacksonmiller/.nix-profile/bin/yabai -m config window_placement second_child
/Users/jacksonmiller/.nix-profile/bin/yabai -m config top_padding 10
/Users/jacksonmiller/.nix-profile/bin/yabai -m config bottom_padding 10
/Users/jacksonmiller/.nix-profile/bin/yabai -m config left_padding 10
/Users/jacksonmiller/.nix-profile/bin/yabai -m config right_padding 10
/Users/jacksonmiller/.nix-profile/bin/yabai -m config window_gap 10

# Mouse settings
/Users/jacksonmiller/.nix-profile/bin/yabai -m config mouse_follows_focus off
/Users/jacksonmiller/.nix-profile/bin/yabai -m config focus_follows_mouse off
/Users/jacksonmiller/.nix-profile/bin/yabai -m config mouse_modifier alt
/Users/jacksonmiller/.nix-profile/bin/yabai -m config mouse_action1 move
/Users/jacksonmiller/.nix-profile/bin/yabai -m config mouse_action2 resize
/Users/jacksonmiller/.nix-profile/bin/yabai -m config mouse_drop_action swap

# Window appearance
/Users/jacksonmiller/.nix-profile/bin/yabai -m config window_opacity off
/Users/jacksonmiller/.nix-profile/bin/yabai -m config window_shadow on
/Users/jacksonmiller/.nix-profile/bin/yabai -m config active_window_opacity 1.0
/Users/jacksonmiller/.nix-profile/bin/yabai -m config normal_window_opacity 0.95

# Window rules - don't manage certain apps
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add app="^System Settings$" manage=off
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add app="^Calculator$" manage=off
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add app="^Finder$" manage=off
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add app="^System Information$" manage=off
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add title="^Quick Terminal$" manage=off sticky=on layer=above
/Users/jacksonmiller/.nix-profile/bin/yabai -m rule --add title="^Quick Terminal$" grid=6:6:1:1:4:4

# Status bar indicator
echo "yabai configuration loaded.."